<mvc:View 
        controllerName="invoices.controller.HelloPanel"
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        displayBlock="true">
    <Panel      id="p1" 
                headerText="{i18n>helloPanel}" 
                class="sapUiResponsiveMargin"
                expandable="{device>/system/phone}"
                expanded="{= !${device>/system/phone} }"
                accessibleRole="Region" >
        <content>
            <Button id="helloDialogButton"
                    icon="sap-icon://action"
                    class="sapUiMediumMarginBottom sapUiSmallMarginEnd sapUiVisibleOnlyOnDesktop"
                    text="{i18n>helloDialogButtonText}" 
                    press=".onOpenDialog"></Button>
            <Button id="b1"
                    class="sapUiMediumMarginBottom sapUiSmallMarginEnd sapUiHideOnDesktop"
                    text="{i18n>showHelloButtonText}" 
                    press=".onShowHello"></Button>

            <Input  id="i1"
                    value="{/recipient/name}" 
                    valueLiveUpdate="true"
                    width="60%"/>
            <Text   id="t1"
                    text="Hello {/recipient/name}" 
                    class="sapUiSmallMargin boldElements"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="invoices.fragment.Form01" type="XML" />
</mvc:View>        